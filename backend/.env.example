# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api

# JWT Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=saas_ecommerce

# MongoDB
MONGODB_URI=mongodb://localhost:27017/saas_ecommerce

# Asaas Payment Integration
ASAAS_API_KEY=your_asaas_api_key_here
ASAAS_API_URL=https://sandbox.asaas.com/api/v3

# Redis (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Service
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=noreply@saasecommerce.com

# Storage
STORAGE_TYPE=local # or s3, cloudinary, etc.
S3_ACCESS_KEY=your_s3_access_key_here
S3_SECRET_KEY=your_s3_secret_key_here
S3_BUCKET=your_s3_bucket_name
S3_REGION=your_s3_region

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGINS=http://localhost:3001,http://localhost:3002,http://localhost:3003
RATE_LIMIT_WINDOW_MS=15*60*1000 # 15 minutes
RATE_LIMIT_MAX=100 # 100 requests per window

# Microservices
AUTH_SERVICE_PORT=3001
CATALOG_SERVICE_PORT=3002
CHECKOUT_SERVICE_PORT=3003
PAYMENTS_SERVICE_PORT=3004
SCHEDULING_SERVICE_PORT=3005
ADMIN_SERVICE_PORT=3006
MARKETING_SERVICE_PORT=3007
